pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Get some code from a GitHub repository
                git 'https://github.com/iam-dev/gs-actuator-service.git'
                dir('complete'){
                    sh 'pwd'
                    sh 'docker build --tag gs-actuator-service .'
                }
            }
        }
        stage('ZAP') {
            steps {
                script {
                    startZap(host: "127.0.0.1", port: 9991 , timeout: 500, zapHome: "/opt/zaproxy")
                }
            }
        }
        stage('Docker Run') {
            steps {
             sh 'docker run --publish 8000:8080 --detach --name gs-actuator-service gs-actuator-service'
            }
        }
    }
}